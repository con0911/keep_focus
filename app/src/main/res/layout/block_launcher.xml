<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="@dimen/activity_horizontal_margin"
    android:layout_marginRight="@dimen/activity_horizontal_margin"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/imageBlock"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp"
        android:contentDescription="@null"
        android:src="@drawable/ic_launch" />

    <TextView
        android:id="@+id/nameAppBlock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       android:layout_centerHorizontal="true"
        android:layout_below="@+id/imageBlock"
        android:textColor="@color/alert_dialog_text_color"
        android:textSize="@dimen/text_name_app_title_size" />

    <Button
        android:id="@+id/closeBt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/activity_horizontal_margin"
        android:background="@drawable/button_close"
        android:text="@string/close_button"
        android:textColor="@color/color_text_button"
        android:textSize="@dimen/text_name_app_title_size" />

</RelativeLayout>